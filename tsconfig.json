{
    "compilerOptions": {
        "target": "ES2020",
        "module": "CommonJS",
        "lib": [
            "ES2020",
            "DOM"
        ],
        "outDir": "./",
        "rootDir": "./",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "declaration": false,
        "moduleResolution": "node"
    },
    "include": [
        "*.ts",
        "*/**.ts"
    ],
    "exclude": [
        "node_modules",
        "*.js",
        "*/**.js",
        "*.d.ts"
    ]
}
