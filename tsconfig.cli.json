{
    "compilerOptions": {
        "target": "ES2020",
        "module": "CommonJS",
        "lib": ["ES2020"],
        "outDir": "./bin",
        "rootDir": "./bin",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "declaration": false,
        "moduleResolution": "node"
    },
    "include": ["bin/*.ts"],
    "exclude": ["node_modules", "bin/*.js"]
}
