{
    "name": "focusany-sdk",
    "version": "1.1.0",
    "description": "TypeScript definitions for FocusAny",
    "main": "./index.js",
    "types": "./index.d.ts",
    "bin": {
        "focusany-sdk-release-check": "./bin/release-check.js"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/modstart-lib/focusany"
    },
    "keywords": [
        "FocusAny"
    ],
    "author": "ModStart",
    "license": "Apache-2.0",
    "bugs": {
        "url": "https://github.com/modstart-lib/focusany/issues"
    },
    "homepage": "https://github.com/modstart-lib/focusany#readme",
    "scripts": {
        "build": "npm run build:shim && npm run build:cli",
        "build:shim": "npx babel focusany-shim.ts --out-file focusany-shim-browser.js --extensions \".ts\" && npx terser focusany-shim-browser.js --output focusany-shim-browser.min.js --compress --mangle",
        "build:cli": "npx tsc --project tsconfig.cli.json",
        "build:dev": "npx babel focusany-shim.ts --out-file focusany-shim-browser.js --extensions \".ts\"",
        "update": "npm run build",
        "build:watch": "npx babel focusany-shim.ts --out-file focusany-shim-browser.js --extensions \".ts\" --watch",
        "compress": "npx terser focusany-shim-browser.js --output focusany-shim-browser.min.js --compress --mangle",
        "prepublishOnly": "npm run build"
    },
    "exports": {
        ".": {
            "types": "./index.d.ts",
            "default": "./index.js"
        },
        "./shim": {
            "types": "./focusany-shim.d.ts",
            "default": "./focusany-shim.js"
        }
    },
    "devDependencies": {
        "@babel/cli": "^7.28.0",
        "@babel/core": "^7.28.0",
        "@babel/preset-env": "^7.28.0",
        "@babel/preset-typescript": "^7.27.1",
        "@types/node": "^20.0.0",
        "terser": "^5.43.1",
        "typescript": "^5.0.0"
    }
}
